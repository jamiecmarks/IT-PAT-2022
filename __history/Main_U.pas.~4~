unit Main_U;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Splash_U, ExtCtrls;

type
  TfrmMain = class(TForm)
    pnlIntro: TPanel;
    procedure FormShow(Sender: TObject);
    procedure pnlIntroDragOver(Sender, Source: TObject; X, Y: Integer;
      State: TDragState; var Accept: Boolean);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmMain: TfrmMain;

implementation

{$R *.dfm}

procedure TfrmMain.FormShow(Sender: TObject);
begin
frmsplash.showmodal;
end;

procedure TfrmMain.pnlIntroDragOver(Sender, Source: TObject; X, Y: Integer;
  State: TDragState; var Accept: Boolean);
begin
pnlIntro.Color := clGreen;
end;

end.
