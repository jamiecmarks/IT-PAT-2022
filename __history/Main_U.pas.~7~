unit Main_U;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Splash_U, ExtCtrls;

type
  TfrmMain = class(TForm)
    pnlIntro: TPanel;
    procedure FormShow(Sender: TObject);
    procedure pnlIntroMouseEnter(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmMain: TfrmMain;

implementation

{$R *.dfm}

procedure TfrmMain.FormShow(Sender: TObject);
begin
frmsplash.showmodal;
end;

procedure TfrmMain.pnlIntroMouseEnter(Sender: TObject);
begin
pnlIntro.Color := clAqua;
end;

end.
